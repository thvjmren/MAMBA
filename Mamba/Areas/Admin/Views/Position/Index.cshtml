
@model List<Position>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Positions</h4>
            <a asp-area="admin" asp-controller="position" asp-action="create" class="btn btn-info">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Employee Count
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Position position in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @position.Name
                                </td>
                                <td>
                                    @position.Employees.Count
                                </td>
                                <td>
                                    <a asp-controller="position" asp-action="update" class="btn btn-primary">Update</a>
                                    <a asp-area="admin" asp-controller="position" asp-action="delete" asp-route-id="@position.Id" class="btn btn-danger">Delete</a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>